{% schema %} 
{
    "name": "Hero Image", 
    "settings": [
        {
            "type": "image_picker", 
            "id": "hero-image", 
            "label": "Hero"
        }, 
        {
            "type": "text", 
            "id" : "title", 
            "label" : "Heading", 
            "default" : "Featured Products"
        }, 
        {
            "type": "collection", 
            "id": "collection", 
            "label": "Collection" 
        }, 
        {
            "type": "range", 
            "id": "product_limit", 
            "label": "Product Limit", 
            "min": 2, 
            "max": 4, 
            "default": 2
        }
    ]
    }
{% endschema %}