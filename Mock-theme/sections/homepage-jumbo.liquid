        <!-- Another Display Image -->
    <section id='banner' class='banner' >
                <div class="slide-image slide-display full" id='slide-image' >
                      <div class="quote">
                        <h1>LIFE BEGINS WHERE THE COMFORT ZONE ENDS</h1>
                    </div>
                    <div class="news_letter_container news_letter">
                        <h1>Subscribe to Our News Letter</h1>
                        <h3>Get 10% off all items!</h3>
                        <form class='news_letter_form' action="">
                                 <input type="text">
                                 <input type="text">
                                 <button>Sign Up</button>
                        </form>
                     </div>
                    </div>
                    <div class="featured_products">
                        <h1 class='feature_title'>Featured Items</h1>
